            <TextBlock FontSize="14"  TextAlignment="Center" VerticalAlignment="Center">
                <Run Background="Gainsboro" FontFamily="Consolas">Ctrl+F</Run>
                <Run>Filter</Run>
                <Run>&#x0020;&#x00AD;&#x0020;&#x00AD;&#x0020;</Run>
